{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeSchedule": ["* 0-4 * * 5"],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "docker",
      "managerFilePatterns": [
        "/^.*\\/etc\\/containers\\/systemd\\/.*\\.container$/"
      ],
      "matchStrings": [
        "Image=(?<depName>.+?):(?<currentValue>.+?)(?:@(?<currentDigest>sha256:[0-9a-f]+?))?\\n"
      ],
      "versioningTemplate": "docker"
    }
  ],
  "extends": [
    "github>marinatedconcrete/config//renovate/marinatedconcrete#renovate-config-2.1.0",
    "github>marinatedconcrete/config//renovate/recommended#renovate-config-2.1.0"
  ],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": [
        "digest",
        "minor",
        "patch",
        "pin",
        "pinDigest"
      ]
    }
  ]
}
